  <bean id="Lab-BootstrapMultiSelect-Page1" parent="Uif-Page" p:headerText="Page 1"
        p:instructionalText="View for testing Bootstrap select plugins">
    <property name="items">
      <list>
        <bean parent="Uif-VerticalBoxSection">
          <property name="items">
            <list>
              <bean parent="Uif-InputField" p:propertyName="inputField7"  p:onDocumentReadyScript="jQuery('.multiselect').multiselect();" p:fieldLabel.renderColon="false">
                <property name="label">
                  <value>Bootstrap multi-select [a href="http://davidstutz.github.io/bootstrap-multiselect" target="_blank"]source[/a]</value>
                </property>
                <property name="control">
                  <bean parent="Uif-MultiSelectControl">
                    <property name="cssClasses">
                      <list merge="true">
                        <value>multiselect</value>
                      </list>
                    </property>
                  </bean>
                </property>
                <property name="optionsFinder">
                  <bean class="org.kuali.rice.krad.demo.uif.options.SimpleTestKeyValuesLong" p:blankOption="true"/>
                </property>
              </bean>
              <bean parent="Uif-InputField" id="testing" p:propertyName="inputField7" p:onDocumentReadyScript="jQuery('.selectpicker').selectpicker();" p:fieldLabel.renderColon="false">
                <property name="label">
                  <value>Bootstrap select [a href="http://silviomoreto.github.io/bootstrap-select" target="_blank"]source[/a]</value>
                </property>

                <property name="control">
                  <bean parent="Uif-MultiSelectControl">
                    <property name="cssClasses">
                      <list merge="true">
                        <value>selectpicker</value>
                      </list>
                    </property>
                    <property name="dataAttributes">
                      <map>
                        <entry key="live-search" value="true"/>
                      </map>
                    </property>
                  </bean>
                </property>
                <property name="optionsFinder">
                  <bean class="org.kuali.rice.krad.demo.uif.options.SimpleTestKeyValuesLong" p:blankOption="true"/>
                </property>
              </bean>
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>

</beans>
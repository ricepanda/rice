<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

  <bean id="Lab-DropdownMenu" parent="Uif-FormView">
    <property name="headerText" value="Dropdown Menu"/>
    <property name="singlePageView" value="true"/>
    <property name="page">
      <bean parent="Uif-Page">
        <property name="items">
          <list>
            <ref bean="Lab-DropdownMenuDemo"/>
          </list>
        </property>
      </bean>
    </property>
<!--    <property name="formClass" value="org.kuali.rice.krad.labs.fileUploads.LabsFileUploadsForm"/> -->
  </bean>

  <bean id="Lab-DropdownMenuDemo" parent="Uif-VerticalBoxSection" p:headerText="Dropdown Menu">
    <property name="items">
      <list>
        <bean parent="Uif-Message" p:messageText="Standard Dropdown"/>
        <bean parent="Uif-DropdownMenu" p:dropdownToggleText="User thclark">
          <property name="options">
            <list>
              <bean parent="Uif-KeyValueLocation"
                    p:location.viewId="Lab-BootstrapComponents" p:location.controllerMapping="/labs"
                    p:value="Preferences"/>

              <bean parent="Uif-KeyValueLocation"
                    p:location.viewId="Lab-BootstrapComponents" p:location.controllerMapping="/labs"
                    p:value="Logout"/>
            </list>
          </property>
        </bean>

        <bean parent="Uif-Message" p:messageText="Dropdown with Divider"/>
        <bean parent="Uif-DropdownMenu" p:dropdownToggleText="Action List">
          <property name="options">
            <list>
              <bean parent="Uif-KeyValueLocation"
                    p:location.viewId="Lab-BootstrapComponents" p:location.controllerMapping="/labs"
                    p:value="Proposal #1034"/>

              <bean parent="Uif-KeyValueLocation"
                    p:location.viewId="Lab-BootstrapComponents" p:location.controllerMapping="/labs"
                    p:value="Proposal #1035"/>

              <bean parent="Uif-KeyValueLocation"
                    p:location.viewId="Lab-BootstrapComponents" p:location.controllerMapping="/labs"
                    p:value="Proposal #1036"/>

              <bean parent="Uif-KeyValueLocation"
                    p:location.viewId="Lab-BootstrapComponents" p:location.controllerMapping="/labs"
                    p:value="Proposal #1037"/>

              <bean parent="Uif-KeyValueLocation"
                    p:location.viewId="Lab-BootstrapComponents" p:location.controllerMapping="/labs"
                    p:optionDivider="true"/>

              <bean parent="Uif-KeyValueLocation"
                    p:location.viewId="Lab-BootstrapComponents" p:location.controllerMapping="/labs"
                    p:value="Full Action List"/>
            </list>
          </property>
        </bean>

        <bean parent="Uif-Message" p:messageText="Dropdown with Headers"/>
        <bean parent="Uif-DropdownMenu" p:dropdownToggleText="Favorites 11">
          <property name="options">
            <list>
              <bean parent="Uif-KeyValueLocation"
                    p:location.viewId="Lab-BootstrapComponents" p:location.controllerMapping="/labs"
                    p:optionHeader="true" p:value="Documents"/>

              <bean parent="Uif-KeyValueLocation"
                    p:location.viewId="Lab-BootstrapComponents" p:location.controllerMapping="/labs"
                    p:value="Proposal"/>

              <bean parent="Uif-KeyValueLocation"
                    p:location.viewId="Lab-BootstrapComponents" p:location.controllerMapping="/labs"
                    p:value="Budget"/>

              <bean parent="Uif-KeyValueLocation"
                    p:location.viewId="Lab-BootstrapComponents" p:location.controllerMapping="/labs"
                    p:optionHeader="true" p:value="Reports"/>

              <bean parent="Uif-KeyValueLocation"
                    p:location.viewId="Lab-BootstrapComponents" p:location.controllerMapping="/labs"
                    p:value="Yearly Budget"/>
            </list>
          </property>
        </bean>

        <bean parent="Uif-Message" p:messageText="Disabled Options"/>
        <bean parent="Uif-DropdownMenu" p:dropdownToggleText="Select Action">
          <property name="options">
            <list>
              <bean parent="Uif-KeyValueLocation"
                    p:location.viewId="Lab-BootstrapComponents" p:location.controllerMapping="/labs"
                    p:value="Approve"/>

              <bean parent="Uif-KeyValueLocation"
                    p:location.viewId="Lab-BootstrapComponents" p:location.controllerMapping="/labs"
                    p:value="Disapprove" p:disabled="true"/>
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>
</beans>
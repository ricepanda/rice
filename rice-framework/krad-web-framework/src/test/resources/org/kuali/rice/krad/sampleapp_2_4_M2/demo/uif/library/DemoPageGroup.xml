<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

  <!-- PageGroup demo -->
  <bean id="Demo-PageGroup-View" parent="ComponentLibraryView">
    <property name="xmlFilePath" value="/org/kuali/rice/krad/sampleapp_2_4_M2/demo/uif/library/DemoPageGroup.xml"/>
    <property name="javaFullClassPath" value="org.kuali.rice.krad.uif.container.PageGroup"/>
    <property name="docBookAnchor" value="d6813e6638"/>
    <property name="demoGroups">
      <list>
        <ref bean="Demo-PageGroup-Example1"/>
      </list>
    </property>
  </bean>

  <bean id="Demo-PageGroup-Example1" parent="Uif-VerticalBoxSection">
    <property name="items">
      <list>
        <!-- ex:Demo-PageGroup-Example1 start-->
        <bean parent="Uif-Page">
          <property name="items">
            <list>
              <ref bean="page1"/>
              <ref bean="page2"/>
              <ref bean="page3"/>
            </list>
          </property>
        </bean>
        <!-- ex:Demo-PageGroup-Example1 end-->
      </list>
    </property>
  </bean>
  <bean id="page1" parent="Uif-VerticalBoxSection" p:header.render="false">
    <property name="items">
      <list>
        <bean parent="Uif-Label" p:labelText="Page 1" />
      </list>
    </property>
  </bean>
  <bean id="page2" parent="Uif-VerticalBoxSection" p:header.render="false">
    <property name="items">
      <list>
        <bean parent="Uif-Label" p:labelText="Page 2" />
      </list>
    </property>
  </bean>
  <bean id="page3" parent="Uif-VerticalBoxSection" p:header.render="false">
    <property name="items">
      <list>
        <bean parent="Uif-Label" p:labelText="Page 3" />
      </list>
    </property>
  </bean>
</beans>
